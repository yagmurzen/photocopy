        $(document).ready(function (e) {


            $(".input-slug").change(function () {


                var ss = $(".input-slug").val().replace(/Ğ/gim, "g")
                    .replace(/Ü/gim, "u")
                    .replace(/Ş/gim, "s")
                    .replace(/I/gim, "i")
                    .replace(/İ/gim, "i")
                    .replace(/Ö/gim, "o")
                    .replace(/Ç/gim, "c")
                    .replace(/ğ/gim, "g")
                    .replace(/ü/gim, "u")
                    .replace(/ş/gim, "s")
                    .replace(/ı/gim, "i")
                    .replace(/ö/gim, "o")
                    .replace(/ç/gim, "c");

                $(".input-slug-text").val(ss.toLowerCase()
                    .replace(/[^\w ]+/g, '')
                    .replace(/ +/g, '-'));
            });

            $('.sec-btn').click(function (e) {
                e.preventDefault();

                //------

                var modal = $(this).parent().parent().css("display", "none");
                var _parent = $(this).parent();
                var val = _parent.find($($("input[type='radio']:checked"))).val();
                var param_name = _parent.find($($("input[type='radio']:checked"))).attr("param-name");
                $('input[name="' + param_name + '"]').val(val);
                var param_text_val = _parent.find($($("input[type='radio']:checked"))).parent().find("label span").text()


                $('input[name="' + param_name + '"]').parent().find($("button")).text(param_text_val);
                //------

                var form = $("#frm-calc");

                $.ajax({
                    type: "POST",
                    url: "Hesapla",
                    data: form.serialize(),
                    success: function (data) {
                        console.log(data);
                        var str = "<p><span>Sayfa Sayısı</span> <span>" + 1 + "</span></p> ";
                        str = str + "<p><span>Sayfa Ücreti</span> <span>" + data.unitPrice + " &#8378;</span></p> ";
                        str = str + "<p><span>Dosya Ücreti</span> <span>" + data.pagePrice + " &#8378;</span></p>";
                        $(".results").html(str);

                    }
                });

            });

            $(".btnCalculate").click(function (e) {
                e.preventDefault(); // avoid to execute the actual submit of the form.

                var form = $("#frm-calc");
                $('.orderItemList').load('SepeteEkle', form.serialize());
                $("#fileUploadArea").css("display", "flex");
                let inputItems = document.getElementsByClassName("input-item-button");
                let btnContainer = document.getElementById("btnContainer");
                btnContainer.style.display = "none";
                [...inputItems].map(item => {
                    item.disabled = true;
                });
                $("#uploadFileBtn").css("display", "none");
                $("#fileInputText").text("+ Tıklayın Dosyanızı Seçin");
                $("#dosyaBasligi").text("");
                $("#dosyaBasligi").css("display", "none");
                $("#siparis-config-file-input").css("visibility", "visible");

            });

            $("#uploadFileBtn").click(function (e) {
                e.preventDefault(); // avoid to execute the actual submit of the form.
                var formData = new FormData();
                formData.append('File', $('input[type=file]')[0].files[0]);

                debugger;
                $.ajax({
                    type: "POST",
                    url: "DosyaYukle",
                    data: formData,
                    contentType: false,
                    processData: false,
                    success: function (data) {
                        $("#FileId").val(data);
                        const reader = new FileReader();
                        reader.readAsBinaryString($('input[type=file]')[0].files[0]);
                        reader.onloadend = () => {
                            const count = reader.result.match(/\/Type[\s]*\/Page[^s]/g).length;
                            $("#PdfPageCount").val(count);

                            var form = $("#frm-calc");

                            $.ajax({
                                type: "POST",
                                url: "Hesapla",
                                data: form.serialize(),
                                success: function (data) {
                                    console.log(data);
                                    var str = "<p><span>Sayfa Sayısı</span> <span>" + count + "</span></p> ";
                                    str = str + "<p><span>Sayfa Ücreti</span> <span>" + data.unitPrice + " &#8378;</span></p> ";
                                    str = str + "<p><span>Dosya Ücreti</span> <span>" + data.pagePrice + " &#8378;</span></p>";
                                    $(".results").html(str);
                                    let inputItems = document.getElementsByClassName("input-item-button");
                                    let btnContainer = document.getElementById("btnContainer");
                                    btnContainer.style.display = "block";
                                    [...inputItems].map(item => {
                                        item.disabled = false;
                                    });
                                }
                            });
                        }
                    }
                });

            });

            $("body").on("click", ".item-delete", function (e) {
                e.preventDefault(); // avoid to execute the actual submit of the form.
                $('.orderItemList').load('SepettenCikar', { id: $(".item-delete").attr("data-id") });
            });
           
        });
    </script>
