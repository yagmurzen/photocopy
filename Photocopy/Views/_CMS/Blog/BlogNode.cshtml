@model Photocopy.Entities.Dto.BlogNodeDto

@{
    ViewData["Title"] = "Blog Sayfası";
    Layout = "_LayoutCms";
}
<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header card-header-special">
                        <h4 class="card-title ">@(Model.Id != null ? "Blog Güncelle" : "Blog Ekle")</h4>
                    </div>
                    <div class="card-body">
                        @using (Html.BeginForm("blog-detay", "cms", FormMethod.Post, new { autocomplete = "off" }))
                        {
                            <input type="hidden" name="Id" value="@Model.Id" />
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label class="bmd-label-floating">Blog Adı</label>
                                        <input type="text" name="Name" class="form-control" value="@Model.Name" required>
                                    </div>
                                </div>
                            </div>

                            <button type="submit" class="btn btn-info pull-right btn-sm">@(Model.Id != null ? "Güncelle" : "Ekle") </button>
                            <div class="clearfix"></div>
                        }
                    </div>
                </div>
            </div>

        </div>


        @if (Model.Id != null)
        {
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header card-header-special">

                                <span class="card-title">Sayfa Listesi</span>
                                @if (Model.Pages.Count == 0)
                                {
                                <a href="/Cms/blog-sayfasi?blogId=@Model.Id&blogPageId=" class="btn btn-default pull-right btn-sm">Blog Oluştur</a>
                                }

                        </div>


                        <div class="card-body">
                            <div class="table-responsive">
                                @if (Model.Pages.Count > 0)
                                {
                                    <table class="table">
                                        <thead class=" text-info">
                                        <th>
                                            Blog Numarası
                                        </th>
                                        <th>
                                            Blog Adı
                                        </th>
                                        <th class="td-actions text-right">
                                            İşlemler
                                        </th>

                                        </thead>
                                        <tbody>
                                            @if (Model.Pages != null)
                                            {
                                                @foreach (var item in Model.Pages)
                                                {
                                                    <tr>
                                                        <td>@item.Id</td>
                                                        <td>@item.PageTitle</td>
                                                        <td class="td-actions text-right">

                                                            <form method="post" action="/cms/DeleteBlogPage?contentNodeId=@Model.Id&blogPageId=@item.Id">
                                                                <button type="button" rel="tooltip" title="Edit Task" class="delete btn btn-warning btn-link btn-sm" data-blogId="@Model.Id" data-pageId="@item.Id">
                                                                    <i class="material-icons">delete</i>
                                                                </button>
                                                            </form>
                                                            <a href="/Cms/blog-sayfasi?blogId=@Model.Id&blogPageId=@item.Id" rel="tooltip" title="Edit Task" class="btn btn-info btn-link btn-sm">
                                                                <i class="material-icons">edit</i>
                                                            </a>
                                                        </td>
                                                    </tr>
                                                }
                                            }
                                    </table>
                                }
                            </div>
                        </div>



                    </div>

                </div>

            </div>


