@model WebUI.Model.DateboxDto
<div class="form-group">
    <label class="col-lg-3 control-label">@Model.Label</label>
    <div class="col-lg-8">
        <input type="text" id="@(string.IsNullOrEmpty(Model.Id) ? Model.Name : Model.Id)" name="@Model.Name" data-date-format="dd-mm-yyyy"  placeholder="@Model.PlaceHolder" @(Model.IsRequired ? "" : "data-required='true'")  value="@Model.Value.ToString("dd-MM-yyyy")" class="form-control datepicker @Model.CssClass">
    </div>
</div>