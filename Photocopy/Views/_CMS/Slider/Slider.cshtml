@model Photocopy.Entities.Dto.SliderDto

@{
    ViewData["Title"] = "Slider Güncelle";
    Layout = "_LayoutCms";
}
<style>
    .image {
        height: 150px;
        display: flex !important;
    }

        .image img {
            display: block;
            max-width: 100%;
            max-height: 300px;
        }

</style>
<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header card-header-special">
                        <h4 class="card-title ">Slider Düzenle</h4>
                    </div>
                    <div class="card-body">
                        @using (Html.BeginForm("Slider", "cms", FormMethod.Post, new { autocomplete = "off", enctype = "multipart/form-data" }))
                        {
                            <input type="hidden" name="Id" value="@Model.Id" />
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label class="bmd-label-floating">Başlık</label>
                                        <input type="text" name="Name" class="form-control" value="@Model.Name" required>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label class="bmd-label-floating">Alt Başlık</label>
                                        <input type="text" name="Subtitle" class="form-control" value="@Model.Subtitle" required>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label class="bmd-label-floating">Açıklama</label>
                                        <input type="text" name="Description" class="form-control" value="@Model.Description" required>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label class="bmd-label-floating">Buton Adı</label>
                                        <input type="text" name="ButtonText" class="form-control" value="@Model.ButtonText" required>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-3">
                                    <div class="mb-4 justify-content-center image">
                                        <img src='@(Model.ImagePath!=null ? "data:image/png;base64,"+Model.ImagePath : "https://mdbootstrap.com/img/Photos/Others/placeholder.jpg")'
                                         alt="Ana Görsel" id="img-formFile" />
                                    </div>
                                    <div class="d-flex justify-content-center">
                                        <div class="btn btn-sm btn-default btn-rounded">
                                            <label class="form-label text-white m-1" for="formFile">Resim Yükle</label>
                                            <input type="file" class="form-control d-none file-upload" id="formFile" name="ImagePath" accept="image/*" />
                                        </div>
                                    </div>
                                </div>                               
                                <div class="col-md-3">

                                    <div class="mb-4 justify-content-center image">
                                        <img src='@(Model.MobileImagePath!=null ? "data:image/png;base64,"+Model.MobileImagePath : "https://mdbootstrap.com/img/Photos/Others/placeholder.jpg")'
                                         alt="Mobil Görsel"id="img-formFile2" />
                                    </div>
                                    <div class="d-flex justify-content-center">
                                        <div class="btn btn-sm btn-default btn-rounded">
                                            <label class="form-label text-white m-1" for="formFile2">Resim Yükle</label>
                                            <input type="file" class="form-control d-none file-upload" id="formFile2" name="MobileImagePath" accept="image/*" />
                                        </div>
                                    </div>
                                </div>

                            </div>
                            <div class="row">
                                <div class="col-md-12">

                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" name="IsActive" value="Model.IsActive" @(Model.IsActive ? "checked" :"") id="flexCheckDefault" />
                                        <label class="form-check-label" for="flexCheckDefault"> Aktif</label>
                                    </div>

                                </div>
                            </div>

                            <button type="submit" class="btn btn-info pull-right btn-sm">@(Model.Id != null ? "Güncelle" : "Ekle") </button>
                            <div class="clearfix"></div>
                        }
                    </div>
                </div>
            </div>

        </div>


    </div>
</div>



@section scripts {
    <script>

        $(document).ready(function (e) {

            $('.file-upload').change(function () {
                const file = this.files[0];
                const id = $(this).attr("id");

                console.log(file);
                if (file) {
                    let reader = new FileReader();
                    reader.onload = function (event) {
                        console.log(event.target.result);
                        $("#img-" + id).attr('src', event.target.result);
                    }
                    reader.readAsDataURL(file);
                }
            });

            function dataURLtoFile(dataurl, filename) {

                var arr = dataurl.split(','),
                    mime = arr[0].match(/:(.*?);/)[1],
                    bstr = atob(arr[1]),
                    n = bstr.length,
                    u8arr = new Uint8Array(n);

                while (n--) {
                    u8arr[n] = bstr.charCodeAt(n);
                }

                return new File([u8arr], filename, { type: mime });
            }

            function base64ToInputFile(filename) {
                var imageData = $("#img-" + filename).attr("src");
                var file = dataURLtoFile(imageData, "test.png");
                let container = new DataTransfer();
                container.items.add(file);
                document.querySelector('#' + filename).files = container.files;
                var newfile = document.querySelector('#' + filename).files[0];
            }
            base64ToInputFile("formFile"); base64ToInputFile("formFile2");

        });
    </script>
}