@model Photocopy.Entities.Dto.BlogPageDto
@{
    ViewData["Title"] = "Blog İçerik Güncelleme";
    Layout = "_Layout";
}

<style>
    .image {
        height: 150px;
        display: flex !important;
    }

        .image img {
            display: block;
            max-width: 100%;
            max-height: 300px;
        }

</style>

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header card-header-special">
                <h4 class="card-title">@(Model.Id != null ? "Blog Sayfa Güncelle" : "Blog Sayfa Ekle")</h4>
            </div>
            <div class="card-body">
                @*<form method="post" action="/ContentNode/ContentPageSaveOrUpdate?contentPageId=@Model">*@


                @using (Html.BeginForm("BlogPage", "Blog", FormMethod.Post, new { autocomplete = "off", enctype = "multipart/form-data" }))
                {
                    <input type="hidden" name="Id" value="@Model.Id" />
                    <input type="hidden" name="ContentNodeId" value="@Model.ContentNodeId" />

                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label class="bmd-label-floating">Sayfa Adı</label>
                                <input type="text" name="PageTitle" class="form-control input-slug" value="@Model.PageTitle" required>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label class="bmd-label-floating">Sayfa Url'i</label>
                                <input type="text" name="Slug" class="form-control input-slug-text" value="@Model.Slug" required>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label class="bmd-label-floating">Sayfa Alt Başlık</label>
                                <input type="text" name="Subtitle" class="form-control" value="@Model.Subtitle" required>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label class="bmd-label-floating">Sayfa Açıklaması</label>
                                <input type="text" class="form-control" name="Description" value="@Model.Description" required>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" name="IsActive"  value="Model.IsActive" @(Model.IsActive ? "checked" :"") id="flexCheckDefault" />
                                    <label class="form-check-label" for="flexCheckDefault"> Sayfa Aktif mi ?</label>
                                </div>

                            </div>
                        </div>
                    </div>


                    <div class="row">

                        <div class="col-md-3">
                            <div class="mb-4 justify-content-center image">
                                <img src='@(Model.MainImagePath!=null ? "data:image/png;base64,"+@Model.MainImagePath : "https://mdbootstrap.com/img/Photos/Others/placeholder.jpg")'
                                 alt="Ana Görsel" id="img-formFile" />
                            </div>
                            <div class="d-flex justify-content-center">
                                <div class="btn btn-sm btn-default btn-rounded">
                                    <label class="form-label text-white m-1" for="formFile">Resim Yükle</label>
                                    <input type="file" class="form-control d-none file-upload" id="formFile" name="MainImagePath" accept="image/*" />
                                </div>
                            </div>
                        </div>

                        <div class="col-md-3">

                            <div class="mb-4 justify-content-center image">
                                <img src='@(Model.ThumbImagePath!=null ? "data:image/png;base64,"+@Model.ThumbImagePath : "https://mdbootstrap.com/img/Photos/Others/placeholder.jpg")'
                                 alt="Mobil Görsel" id="img-formFile2" />
                            </div>
                            <div class="d-flex justify-content-center">
                                <div class="btn btn-sm btn-default btn-rounded">
                                    <label class="form-label text-white m-1" for="formFile2">Resim Yükle</label>
                                    <input type="file" class="form-control d-none file-upload" id="formFile2" name="ThumbImagePath" accept="image/*" />
                                </div>
                            </div>
                        </div>

                    </div>
                    <div class="row">
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label class="bmd-label-floating">Css</label>
                                <textarea type="text" class="form-control" name="CustomCss" rows="6">@Model.CustomCss</textarea>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label class="bmd-label-floating">Js</label>
                                <textarea type="text" class="form-control" name="CustomJs" rows="6">@Model.CustomJs </textarea>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label class="bmd-label-floating">Html İçerik</label>
                                <textarea id="mytextarea" name="HtmlContent">@Html.Raw(Model.HtmlContent)</textarea>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label class="bmd-label-floating">Meta Description</label>
                                <input type="text" class="form-control" name="MetaDescription" value="@Model.MetaDescription" required>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label class="bmd-label-floating">Meta Keyword</label>
                                <input type="text" class="form-control" name="MetaKeyword" value="@Model.MetaKeyword" required>
                            </div>
                        </div>
                    </div>

                    <button type="submit" class="btn btn-info pull-right">Sayfayı Güncelle</button>
                    <div class="clearfix"></div>
                }
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script>


        $('.file-upload').change(function () {
            const file = this.files[0];
            const id = $(this).attr("id");

            console.log(file);
            if (file) {
                let reader = new FileReader();
                reader.onload = function (event) {
                    console.log(event.target.result);
                    $("#img-" + id).attr('src', event.target.result);
                }
                reader.readAsDataURL(file);
            }
        });
    </script>
}