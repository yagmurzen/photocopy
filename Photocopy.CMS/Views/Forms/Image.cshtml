@model WebUI.Model.ImageDto
<div id="@(Model.Id + "-tab")" class="form-group @Model.CssClass">
    <label class="col-lg-3 control-label">@Model.Label</label>
    <input type="hidden"  id="@Model.Id" name="@Model.Name" value="@Model.Value" class="@Model.CssClass @(Model.IsRequired ? "" : "notRequire")"/>
    <div class="col-lg-9 media">
        <div id="@(Model.Id + "ii")" class="bg-light pull-left text-center media-large thumb-large">
            @if(string.IsNullOrEmpty(Model.Value))
            {
                @*<i class="fa fa-picture-o inline fa fa-light fa fa-3x m-t-large m-b-large"></i>*@
                <img id="@(Model.Id + "Path")" src="/Assets/Upload/placeholder.png" class="" style="max-height: 200px; max-width: 90px;" />
            }
            else
            {
                <img id="@(Model.Id + "Path")" src="@Model.Value" class="" style="max-height: 200px; max-width: 90px;" />
            }
        </div>
    <div class="media-body">
        <input type="file" id="@(Model.Id + "Upload")" name="@(Model.Name + "Upload")" data-id="@Model.Id"  title="Change" class="btn btn-sm btn-info m-b-small"><br>
        
        <button class="upload-start-btn btn btn-sm btn-default" data-id="@Model.Id">Yükle</button>
    </div>
    </div>
</div>