@model Photocopy.Entities.Dto.SliderDto

@{
    ViewData["Title"] = "Slider Güncelle";
    Layout = "_Layout";
}
<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header card-header-special">
                        <h4 class="card-title ">Slider Düzenle</h4>
                    </div>
                    <div class="card-body">
                        @using (Html.BeginForm("Slider", "Slider", FormMethod.Post, new { autocomplete = "off" }))
                        {
                            <input type="hidden" name="Id" value="@Model.Id" />
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label class="bmd-label-floating">Başlık</label>
                                        <input type="text" name="Name" class="form-control" value="@Model.Name" required>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label class="bmd-label-floating">Alt Başlık</label>
                                        <input type="text" name="Subtitle" class="form-control" value="@Model.Subtitle" required>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label class="bmd-label-floating">Açıklama</label>
                                        <input type="text" name="Description" class="form-control" value="@Model.Description" required>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label class="bmd-label-floating">Buton Adı</label>
                                        <input type="text" name="ButtonText" class="form-control" value="@Model.ButtonText" required>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-3">
                                    <div class="mb-4 justify-content-center" style="height: 150px;display: flex !important;">
                                        <img src='@(Model.ImagePath!="" ? "data:image/png;base64,"+@Model.ImagePath : "https://mdbootstrap.com/img/Photos/Others/placeholder.jpg")'
                                         alt="Ana Görsel" width="75" id="img-formFile" />
                                    </div>
                                    <div class="d-flex justify-content-center">
                                        <div class="btn btn-sm btn-default btn-rounded">
                                            <label class="form-label text-white m-1" for="formFile">Resim Yükle</label>
                                            <input type="file" class="form-control d-none file-upload" id="formFile" name="ImagePath" accept="image/*" />
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-3">

                                    <div class="mb-4 justify-content-center" style="height: 150px;display: flex !important;">
                                        <img src='@(Model.MobileImagePath!="" ? "data:image/png;base64,"+@Model.MobileImagePath : "https://mdbootstrap.com/img/Photos/Others/placeholder.jpg")'
                                         alt="Mobil Görsel" width="75" id="img-formFile2" />
                                    </div>
                                    <div class="d-flex justify-content-center">
                                        <div class="btn btn-sm btn-default btn-rounded">
                                            <label class="form-label text-white m-1" for="formFile2">Resim Yükle</label>
                                            <input type="file" class="form-control d-none file-upload" id="formFile2" name="MobileImagePath" accept="image/*" />
                                        </div>
                                    </div>
                                </div>

                            </div>
                            <div class="row">
                                <div class="col-md-12">

                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" name="IsActive" value="Model.IsActive" @(Model.IsActive ? "checked" :"") id="flexCheckDefault" />
                                        <label class="form-check-label" for="flexCheckDefault"> Aktif</label>
                                    </div>

                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-12">


                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" name="IsExternal" value="Model.IsExternal" @(Model.IsActive ? "checked" :"") id="flexCheckDefault" />
                                        <label class="form-check-label" for="flexCheckDefault"> Yeni Sekme</label>
                                    </div>

                                </div>
                            </div>
                            <button type="submit" class="btn btn-info pull-right btn-sm">@(Model.Id != null ? "Güncelle" : "Ekle") </button>
                            <div class="clearfix"></div>
                        }
                    </div>
                </div>
            </div>

        </div>


    </div>
</div>

@section scripts {
    <script>


        $('.file-upload').change(function () {
            const file = this.files[0];
            const id = $(this).attr("id");

            console.log(file);
            if (file) {
                let reader = new FileReader();
                reader.onload = function (event) {
                    console.log(event.target.result);
                    $("#img-" + id).attr('src', event.target.result);
                }
                reader.readAsDataURL(file);
            }
        });
    </script>
}